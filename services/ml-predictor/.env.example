# Environment variables for ML Predictor service
SERVICE_NAME=ml-predictor
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8007

# Database
DATABASE_URL=postgresql://docqa_admin:changeme@postgres:5432/ml_predictor

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=docqa_rabbitmq
RABBITMQ_PASS=changeme

# Model Configuration
MODEL_PATH=/app/trained_models

# Feature Engineering
MAX_TEXT_LENGTH=5000
TFIDF_MAX_FEATURES=100

# Prediction Thresholds
PREDICTION_THRESHOLD_LOW=0.3
PREDICTION_THRESHOLD_HIGH=0.7

# XGBoost Parameters
XGBOOST_N_ESTIMATORS=300
XGBOOST_MAX_DEPTH=8
XGBOOST_LEARNING_RATE=0.05

# SHAP Configuration
SHAP_TOP_FEATURES=10
